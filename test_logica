def digital_root(n):
    sum_of_numbers = 0
    for number in str(n):
        sum_of_numbers += int(number)
        
    if sum_of_numbers > 9:
        numero = 0
        for number in str(sum_of_numbers):
            numero += int(number)
        return numero
    return sum_of_numbers
    
